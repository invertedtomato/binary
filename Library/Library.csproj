<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>InvertedTomato.Packing</AssemblyName>
        <RootNamespace>InvertedTomato.Packing</RootNamespace>
        <TargetFrameworks>net7.0;netstandard1.0;netstandard2.0</TargetFrameworks>
        <LangVersion>11</LangVersion>
        <Version>5.0.2</Version>
        <Title>InvertedTomato.Packing</Title>
        <Authors>Inverted Tomato</Authors>
        <Description>Library for expressing data in the least possible space without using compression. Handy storage and transmission of data when both speed and size are critical. Includes VLQ, Elias Omega, Elias Gamma, Elias Delta, Fibonacci and others.</Description>
        <Copyright>Inverted Tomato</Copyright>
        <PackageProjectUrl>https://github.com/invertedtomato/packing</PackageProjectUrl>
        <PackageLicenseUrl>https://raw.githubusercontent.com/invertedtomato/packing/master/LICENSE</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/invertedtomato/packing</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>Compression VLQ Elias Omega Gamma Delta Fibonacci Integer Numbers</PackageTags>
        <ImplicitUsings>disable</ImplicitUsings>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>InvertedTomato.Packing</PackageId>
        <Product>InvertedTomato.Packing</Product>
        <AssemblyVersion>5.0.2</AssemblyVersion>
        <FileVersion>5.0.2</FileVersion>
        <PackageReleaseNotes>Updated readme</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
      <Folder Include="Codecs\ByteArrays" />
      <Folder Include="Codecs\Strings" />
    </ItemGroup>

    <PropertyGroup>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <DocumentationFile>InvertedTomato.Packing.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DocumentationFile>InvertedTomato.Packing.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="../README.md" Pack="true" PackagePath="\" />
    </ItemGroup>
</Project>
